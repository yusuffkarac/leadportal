# LeadPortal Production Environment Variables
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin

# Database
DATABASE_URL="postgresql://leadportal_user:güçlü_şifre@localhost:5432/leadportal"

# JWT
JWT_SECRET="çok-güçlü-ve-uzun-jwt-secret-anahtari-production-ortamı-icin"

# Server
PORT=4000
NODE_ENV=production

# CORS - Production domain'inizi yazın
CORS_ORIGIN="https://leadportal.yourdomain.com"

# Formleadport Integration - Django projenizin URL'si
FORMLEADPORT_URL="https://yourdomain.com"
FORMLEADPORT_JWT_SECRET="formleadport-icin-güçlü-jwt-secret"

# Email Configuration (opsiyonel)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@yourdomain.com"

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH="./uploads"

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="session-icin-güçlü-secret"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"
